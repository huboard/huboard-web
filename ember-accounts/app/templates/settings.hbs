<div class="container">
<div class="row">
  <div class="span3">
    <h1>Accounts</h1>
    <ul class="nav nav-list">
      {{#link-to 'settings.user-profile' tagName='li' href=false}}
        {{#link-to "settings.user-profile"}}
        <img height="24" width="24" src={{model.user.gravatar_url}}
                         alt="{{model.user.login}} Avatar">
        {{model.user.login}}
        {{/link-to}}
      {{/link-to}}

      {{#each model.orgs as |org|}}
        {{#link-to 'settings.profile' org tagName='li' href=false}}
          {{#link-to "settings.profile" org}}
            <img height="24" width="24" src={{org.gravatar_url}} alt="{{org.login}}
        Avatar"/>
            {{ org.login }}
          {{/link-to}}
        {{/link-to}}
      {{/each}}
    </ul>
  </div>
  <div class="span9">
    {{outlet}}
  </div>
</div>
</div>
