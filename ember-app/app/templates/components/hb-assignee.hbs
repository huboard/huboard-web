{{#if editable}}
<h5 {{action "toggleSelector"}}> 
  <i  class="pull-right ui-icon ui-icon-gear"></i>
  Assignee
</h5>
{{else}}
<h5> 
  Assignee
</h5>
{{/if}}

{{#if selected}}
<div class="hb-selected">
  {{hb-avatar user=selected}} {{selected.login}}
</div>
{{else}}
<div class="hb-selected empty">
{{#if editable}}
 No one - <a{{action "assignToCurrentUser"}}>assign yourself</a>
{{else}}
 No one assigned
{{/if}}
</div>
{{/if}}
<div class="hb-flyout">
  <div class="hb-header">
    Assign someone to this issue
  </div>
  <div class="hb-text-filter">
    {{input placeholder="Filter people" value=filterPeople}}
  </div>

  <div class="hb-menu-items">
    {{#if selected}}
    <div class="hb-menu-item">
      <div {{action "clearAssignee" }} >
        <i class="ui-icon ui-icon-x-thin"></i>
        Clear assignee
      </div>
    </div>
    {{/if}}
    {{#each sortedListItems as |listItem|}}
    <div class="hb-menu-item {{if listItem.selected 'checked'}}">
      <div {{action "assignTo" listItem.item}} >
        <i class="ui-icon ui-icon-checkmark"></i>
        {{hb-avatar user=listItem.item}} {{listItem.item.login}}
      </div>
    </div>
    {{/each}}
  </div>
</div>
