<div class="column-contents">
  {{columns/hb-task-header column=model issues=sortedIssues isCollapsed=isCollapsed}}

  {{#if isCreateVisible}}
    {{columns/hb-quick-issue
      column=model
      repo=model.board.repo
      createFullscreenIssue=(action attrs.createFullscreenIssue)
    }}
  {{/if}}

  {{#vertical-collection
    itemClassNames='cards sortable'
    itemTagName='div'
    content=sortedIssues
    containerSelector='>.column-contents'
    as |issue|}}
      {{
        hb-task-card
          issue=issue
          issues=sortedIssues
          repos=repos
          cardClick=(action attrs.openFullscreenIssue issue)
          isLastColumn=model.isLastColumn
      }}
  {{/vertical-collection}}
  <div class="collapsed"></div>
</div>
