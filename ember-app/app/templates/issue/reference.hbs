{{#if view.isLoaded}}
  {{#if view.isProcessing}}
    <div class="spinner">
      {{hb-spinner}}
    </div>
  {{/if}}
    <div class="commit-info"> 
      <a class="commit" target="_blank" href="{{view.commitUrl}}">
        {{view.shortSha }}
      </a> 
     <span class="commit-message"> 
       <span class="commit-link">-o-</span> {{hb-avatar user=model.actor width=16 height=16 }} 
       {{view.message}}
       {{#unless view.message}}
         <span class="empty">No commit message</span>
       {{/unless}}
     </span> 
    </div>
{{else}}
  <div class="commit-info"> 
    <a class="commit" target="_blank" href="#">
      1337bada55
    </a> 
   <span class="commit-link">-o-</span> {{hb-avatar user=model.actor width=16 height=16 }} Lorem ipsum dolar 
  </div>
{{/if}}
