<head>
	<%= render partial: 'shared/abtest' %>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HuBoard - <%= content_for :title %></title>
	<meta name="description" content="Instant project management for GitHub issues">
	<meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <link rel="shortcut icon" href="/favicon.ico?v=3" />

	<!-- Stylesheets -->
	<link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700" rel="stylesheet" type="text/css">
  <%= stylesheet_link_tag 'marketing/main' %>

	<!-- Javascript -->
	<!--[if lt IE 9]>
	<script src="assets/js/vendor/html5shiv.js"></script>
	<script src="assets/js/vendor/respond.js"></script>
	<script src="assets/js/vendor/selectivizr-min.js"></script>
	<![endif]-->

</head>
<body>
<!-- top container -->
<div class="top top--<%= params[:action] %> <%= params[:action] == "integrations" ? "top--stars" : "" %>"> <div class="top-inner">
  <%= render partial: 'shared/header' %>
  <%= content_for :marketing_hero %>

</div></div>
<!-- / top container -->


  <%= yield %>

<!-- footer -->
<footer class="footer" id="footer"><div class="container">
	<!-- call to action -->
	<div class="footer__signup">
		<p>Sign up for our 14-day free trial &rsaquo;</p>
		<div class="footer__signup__btn">
			<a href="/login" class="btn">Get it now!</a>
		</div>
	</div>

  <%= render partial: 'shared/footer_nav' %>

	<!-- copyright -->
	<p class="copyright">
		Copyright &copy; 2015 HuBoard, Inc.
		<a href="/site/terms">Terms of Service</a>
		<a href="/site/privacy">Privacy Policy</a>
    <br />
    Header photo credit with slight modification.
    <a href="https://www.flickr.com/photos/9511824@N05/4858486575/">DaveFayram</a> 
    <a href="https://creativecommons.org/licenses/by/2.0/">cc</a>
	</p>

</div></footer>
<!-- / footer -->
  <%= javascript_include_tag 'marketing' %>
  <%= render partial: 'shared/analytics' %>
   <script>
      $(function() {
        var token = $('meta[name="csrf-token"]').attr('content');
        return $.ajaxPrefilter(function(options, originalOptions, xhr) {
          return xhr.setRequestHeader('X-CSRF-Token', token);
        });
      });
   </script>
</body>
</html>

